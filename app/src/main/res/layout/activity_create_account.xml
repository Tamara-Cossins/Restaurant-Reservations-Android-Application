<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seasidebackground"
    tools:context=".CreateAccountActivity">

    <!-- Card widget for text background -->
    <androidx.cardview.widget.CardView
        android:id="@+id/create_account_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F6F3EF"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Dockside Delight! "
                android:padding="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please input your details: "
                android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <!-- Input field for new Full Name -->
            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="  Full Name"
                android:background="@drawable/black_border"
                android:drawableLeft="@drawable/profile"
                android:padding="16dp"
                android:layout_marginTop="25dp"/>

            <!-- Input field for new Email -->
            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="  Email"
                android:background="@drawable/black_border"
                android:drawableLeft="@drawable/baseline_email_24"
                android:padding="16dp"
                android:layout_marginTop="25dp"/>

            <!-- Input field for new Phone Number -->
            <EditText
                android:id="@+id/input_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|phone"
                android:hint="  Phone Number"
                android:background="@drawable/black_border"
                android:drawableLeft="@drawable/baseline_phone_android_24"
                android:padding="16dp"
                android:layout_marginTop="25dp"/>

            <!-- Input field for new Password -->
            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="  Password"
                android:background="@drawable/black_border"
                android:drawableLeft="@drawable/baseline_password_24"
                android:padding="16dp"
                android:layout_marginTop="25dp"/>

            <!-- Create account button: Leads to DashboardActivity -->
                <Button
                    android:id="@+id/create_account_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:backgroundTint="#E5DDDB"
                    android:layout_marginLeft="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="25dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>



